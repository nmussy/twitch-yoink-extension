{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["chrome", "firefox-webext-browser"]
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules"]
}
